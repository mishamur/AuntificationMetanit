@model AuntificationMetanit.Models.Case

@{
    ViewData["Title"] = "Создать дело";
}


<form asp-action="CreateCase" asp-controller="Home" asp-antiforgery="true">

    <div class="form-group">
        <label asp-for="Theme" class="form-group">Тема</label>
        <input type="text" asp-for="Theme" class="form-control" />
    </div>

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class=" form-group">
                    <label asp-for="DateBegin">Введите дату начала: </label>
                    <input type="text" asp-for="DateBegin" class=" form-control" id="datetimepicker2" />
                </div>

            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class=" form-group">
                    <label asp-for="DateEnd">Введите дату окончания: </label>
                    <input type="text" asp-for="DateEnd" class=" form-control" id="datetimepicker1" />
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Отправить" />
    </div>

</form>





<script src="~/amy/js/jquery-3.2.1.min.js"></script>
<script src="~/amy/js/moment-with-locales.min.js"></script>
<script src="~/amy/js/bootstrap.min.js"></script>
<script src="~/amy/js/bootstrap-datetimepicker.min.js"></script>